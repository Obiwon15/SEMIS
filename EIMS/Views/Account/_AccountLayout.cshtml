@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title | EMIS</title>
</head>
<body class="authentication-bg">

    <div class="home-btn d-none d-sm-block">
              
    </div>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Home")" class="text-center mt-2 text-primary"><h2>EMIS LOGO</h2></a>
                    </div>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- JAVASCRIPT -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/metismenu/metisMenu.min.js"></script>
    <script src="~/lib/simplebar/simplebar.min.js"></script>
    <script src="~/lib/node-waves/waves.min.js"></script>
    <script src="~/lib/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/lib/jquery.counterup/jquery.counterup.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/js/app.js"></script>
</body>
</html>