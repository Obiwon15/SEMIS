@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change your password";
}

<section class="container-fluid">
    <!-- start page title -->
    <header class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0">@ViewBag.Title</h4>

                @*  <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                            <li class="breadcrumb-item active">Basic Elements</li>
                        </ol>
                    </div>*@

            </div>
        </div>
    </header>

    <div class="row">
        <div class="col-md-8 col-sm-10 col-lg-6 mx-sm-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewBag.Title</h4>
                    <hr />

                    <div class="row">
                        <div class="col-lg-11 mx-lg-auto">
                            <div class="mt-4">
                                <form method="post" asp-action="ChangePassword">
                                    @Html.AntiForgeryToken()

                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="CurrentPassword"></label>
                                        <input type="password" asp-for="CurrentPassword" class="form-control">
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="NewPassword"></label>
                                        <input type="password" asp-for="NewPassword" class="form-control">
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="ConfirmPassword"></label>
                                        <input type="password" asp-for="ConfirmPassword" class="form-control">
                                    </div>

                                    <div class="mt-4">
                                        <button type="submit" class="btn btn-primary w-md">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts
{
    <script src="lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
